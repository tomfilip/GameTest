<Window x:Class="MyGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="650" Width="1000" KeyDown="Window_KeyDown">
    <Grid>
        <Canvas Name="Container" Margin="0,0,109,0">
            <Ellipse Name="rect" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="30" >
                <Ellipse.Fill>
                    <RadialGradientBrush GradientOrigin="0.75,0.25">
                        <GradientStop Color="Yellow" Offset="0.0" />
                        <GradientStop Color="Orange" Offset="0.5" />
                        <GradientStop Color="Red" Offset="1.0" />
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Rectangle Fill="Aqua" Width="30" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Canvas.Left="540" Canvas.Top="540" ></Rectangle>
            <Rectangle Name="Ghost1" Stroke="Black"  Width="600" Height="600"></Rectangle>
        </Canvas>
    </Grid>
</Window>
